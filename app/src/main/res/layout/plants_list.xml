<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/plants_list_thumbnail"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:contentDescription="plantImage"
        android:scaleType="centerInside"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/plants_list_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="1dp"
        android:maxLines="1"
        android:text="Plant"
        android:textColor="#000000"
        android:textSize="14sp"
        tools:text="Plant" />

    <RelativeLayout
        android:id="@+id/plants_list_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/plants_list_thumbnail"
        android:layout_toStartOf="@id/plants_list_detail">

        <TextView
            android:id="@+id/plants_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:textSize="16sp"
            tools:text="Title" />

        <TextView
            android:id="@+id/plants_list_water_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plants_list_name"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Water:"
            android:textSize="14sp"
            tools:text="Water:" />
        <TextView
            android:id="@+id/plants_list_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plants_list_name"
            android:layout_toRightOf="@+id/plants_list_water_label"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="14sp"
            tools:text="Subtitle" />

        <TextView
            android:id="@+id/plants_list_diameter_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plants_list_water"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Diameter:"
            android:textSize="14sp"
            tools:text="Diameter:" />
        <TextView
            android:id="@+id/plants_list_diameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plants_list_water"
            android:layout_toRightOf="@+id/plants_list_diameter_label"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="14sp"
            tools:text="Subtitle" />
    </RelativeLayout>
</RelativeLayout>
