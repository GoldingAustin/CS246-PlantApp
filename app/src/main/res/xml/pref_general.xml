<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_add_plant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->

    <TextView
        android:text="Fri."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Fri."
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/Sat."
        android:layout_alignBottom="@+id/Sat."
        android:layout_alignStart="@+id/checkBox3"
        android:layout_toStartOf="@+id/Sat."
        android:textAlignment="center" />

    <TextView
        android:id="@+id/Sat."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBox"
        android:layout_alignEnd="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox"
        android:text="Sat."
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3"
        android:contentDescription="Sn"
        android:textDirection="firstStrongLtr"
        android:layout_alignBaseline="@+id/checkBox"
        android:layout_alignBottom="@+id/checkBox"
        android:layout_toStartOf="@+id/Sat." />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox4"
        android:contentDescription="Sn"
        android:textDirection="firstStrongLtr"
        android:layout_alignBaseline="@+id/checkBox3"
        android:layout_alignBottom="@+id/checkBox3"
        android:layout_toStartOf="@+id/Fri." />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox5"
        android:contentDescription="Sn"
        android:textDirection="firstStrongLtr"
        android:layout_alignBaseline="@+id/checkBox4"
        android:layout_alignBottom="@+id/checkBox4"
        android:layout_toStartOf="@+id/textView8" />

    <TextView
        android:text="Wed."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Wed."
        android:textStyle="normal|bold"
        android:layout_above="@+id/checkBox5"
        android:layout_alignStart="@+id/checkBox5"
        android:layout_toStartOf="@+id/textView8"
        android:textAlignment="center" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox6"
        android:contentDescription="Sn"
        android:textDirection="firstStrongLtr"
        android:layout_alignBaseline="@+id/checkBox5"
        android:layout_alignBottom="@+id/checkBox5"
        android:layout_toStartOf="@+id/Wed." />

    <TextView
        android:text="Tue."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textStyle="normal|bold"
        android:layout_above="@+id/checkBox6"
        android:layout_alignStart="@+id/checkBox6"
        android:layout_toStartOf="@+id/Wed."
        android:textAlignment="center" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox7"
        android:contentDescription="Sn"
        android:textDirection="firstStrongLtr"
        android:layout_alignBaseline="@+id/checkBox6"
        android:layout_alignBottom="@+id/checkBox6"
        android:layout_toStartOf="@+id/textView10" />

    <TextView
        android:text="Sun."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textStyle="normal|bold"
        android:layout_above="@+id/checkBox8"
        android:layout_alignStart="@+id/checkBox8"
        android:layout_toStartOf="@+id/textView11"
        android:textAlignment="center" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:id="@+id/checkBox8"
        android:contentDescription="Sn"
        android:textDirection="firstStrongLtr"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/textView11" />

    <TextView
        android:text="Thu."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/Fri."
        android:layout_alignBottom="@+id/Fri."
        android:layout_alignStart="@+id/checkBox4"
        android:layout_toStartOf="@+id/Fri."
        android:textAlignment="center" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:contentDescription="Sn"
        android:textDirection="firstStrongLtr"
        android:layout_marginStart="31dp"
        android:layout_alignBaseline="@+id/checkBox8"
        android:layout_alignBottom="@+id/checkBox8"
        android:layout_toEndOf="@+id/imageButton" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBox6"
        android:layout_alignStart="@+id/checkBox7"
        android:text="Mon."
        android:textAlignment="center"
        android:textStyle="normal|bold" />

</RelativeLayout>
